<h1 class="text-center"><%= @task.title %><br>
  <small><%= @task.status(@task) %></small>
</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 text-center">
      <p><%= @task.details %></p>
      <% @task.completed %>
      <%= link_to "Edit me", edit_task_path, class:"btn btn-primary" %>
      <br><br>
      <%= link_to "Back to list", tasks_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>
